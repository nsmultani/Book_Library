<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Subject Categories</h1>
  <span class="badge bg-warning fs-6"><%= @total_subjects %> Categories</span>
</div>

<div class="card mb-4">
  <div class="card-body">
    <%= form_with url: subjects_path, method: :get, local: true, class: "row g-3" do |f| %>
      <div class="col-md-8">
        <%= f.text_field :search, placeholder: "Search subjects by name or description...", 
                        class: "form-control", value: params[:search] %>
      </div>
      <div class="col-md-4">
        <%= f.submit "Search Subjects", class: "btn btn-warning me-2" %>
        <%= link_to "Clear", subjects_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
    
    <% if @search_performed %>
      <div class="mt-3 pt-3 border-top">
        <p class="mb-0">Search results for "<strong><%= params[:search] %></strong>" â€¢ Found <strong><%= @total_subjects %></strong> subjects</p>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center mb-4">
  <%= paginate @subjects %>
</div>

<div class="row">
  <% @subjects.each do |subject| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title">
            <% if params[:search].present? %>
              <%= highlight(subject.name, params[:search]) %>
            <% else %>
              <%= subject.name %>
            <% end %>
          </h5>
          <p class="card-text">
            <% if params[:search].present? %>
              <%= highlight(subject.description, params[:search]) %>
            <% else %>
              <%= subject.description %>
            <% end %>
          </p>
          <p class="card-text">
            <span class="badge bg-<%= subject.difficulty_level == 'Beginner' ? 'success' : subject.difficulty_level == 'Intermediate' ? 'warning' : 'danger' %>">
              <%= subject.difficulty_level %>
            </span>
          </p>
          <p class="card-text">
            <strong>Books:</strong> <%= subject.books.count %>
          </p>
          <%= link_to "Browse Books", subject_path(subject), class: "btn btn-warning" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-4">
  <%= paginate @subjects %>
</div>