<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Authors Collection</h1>
  <span class="badge bg-success fs-6"><%= @total_authors %> Total Authors</span>
</div>

<div class="card mb-4">
  <div class="card-body">
    <%= form_with url: authors_path, method: :get, local: true, class: "row g-3" do |f| %>
      <div class="col-md-8">
        <%= f.text_field :search, placeholder: "Search authors by name...", 
                        class: "form-control", value: params[:search] %>
      </div>
      <div class="col-md-4">
        <%= f.submit "Search Authors", class: "btn btn-success me-2" %>
        <%= link_to "Clear", authors_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
    
    <% if @search_performed %>
      <div class="mt-3 pt-3 border-top">
        <p class="mb-0">Search results for "<strong><%= params[:search] %></strong>" â€¢ Found <strong><%= @total_authors %></strong> authors</p>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center mb-4">
  <%= paginate @authors %>
</div>

<div class="row">
  <% @authors.each do |author| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title">
            <% if params[:search].present? %>
              <%= highlight(author.name, params[:search]) %>
            <% else %>
              <%= author.name %>
            <% end %>
          </h5>
          <p class="card-text">
            <strong>Books Written:</strong> <%= author.books.count %>
          </p>
          <% if author.birth_date %>
            <p class="card-text">
              <small class="text-muted"><%= author.display_years %></small>
            </p>
          <% end %>
          <%= link_to "View Books", author_path(author), class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-4">
  <%= paginate @authors %>
</div>