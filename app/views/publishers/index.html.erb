<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Publishers Collection</h1>
  <span class="badge bg-info fs-6"><%= @total_publishers %> Total Publishers</span>
</div>

<div class="row">
  <% @publishers.each do |publisher| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= publisher.name %></h5>
          <p class="card-text">
            <strong>Books Published:</strong> <%= publisher.books.count %>
          </p>
          <% if publisher.founded_year %>
            <p class="card-text">
              <small class="text-muted">Founded: <%= publisher.founded_year %></small>
            </p>
          <% end %>
          <%= link_to "View Books", publisher_path(publisher), class: "btn btn-info" %>
        </div>
      </div>
    </div>
  <% end %>
</div>