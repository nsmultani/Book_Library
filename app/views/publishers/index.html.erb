<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Publishers Collection</h1>
  <span class="badge bg-info fs-6"><%= @total_publishers %> Total Publishers</span>
</div>

<div class="card mb-4">
  <div class="card-body">
    <%= form_with url: publishers_path, method: :get, local: true, class: "row g-3" do |f| %>
      <div class="col-md-8">
        <%= f.text_field :search, placeholder: "Search publishers by name...", 
                        class: "form-control", value: params[:search] %>
      </div>
      <div class="col-md-4">
        <%= f.submit "Search Publishers", class: "btn btn-info me-2" %>
        <%= link_to "Clear", publishers_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
    
    <% if @search_performed %>
      <div class="mt-3 pt-3 border-top">
        <p class="mb-0">Search results for "<strong><%= params[:search] %></strong>" â€¢ Found <strong><%= @total_publishers %></strong> publishers</p>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center mb-4">
  <%= paginate @publishers %>
</div>

<div class="row">
  <% @publishers.each do |publisher| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title">
            <% if params[:search].present? %>
              <%= highlight(publisher.name, params[:search]) %>
            <% else %>
              <%= publisher.name %>
            <% end %>
          </h5>
          <p class="card-text">
            <strong>Books Published:</strong> <%= publisher.books.count %>
          </p>
          <% if publisher.founded_year %>
            <p class="card-text">
              <small class="text-muted">Founded: <%= publisher.founded_year %></small>
            </p>
          <% end %>
          <%= link_to "View Books", publisher_path(publisher), class: "btn btn-info" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-4">
  <%= paginate @publishers %>
</div>